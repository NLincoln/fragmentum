{
  "name": "fragmentum",
  "version": "0.7.0",
  "description": "A SQL Query builder optimized for backend applications",
  "main": "dist/bundle.js",
  "author": "Nathan Lincoln <nlincoln@intellifarms.com>",
  "repository": "NLincoln/fragmentum",
  "license": "MIT",
  "engines": {
    "node": ">= 6.x"
  },
  "scripts": {
    "test": "jest --watch --coverage",
    "build": "BABEL_ENV=build rollup -c",
    "prepublish": "yarn build",
    "test:ci": "jest --ci"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "jest": "^23.6.0",
    "prettier": "^1.14.2",
    "rollup": "^0.55.5",
    "rollup-plugin-babel": "^3.0.3"
  },
  "jest": {
    "verbose": true,
    "moduleNameMapper": {
      "fragmentum": "<rootDir>/src/index.js"
    },
    "coveragePathIgnorePatterns": [
      "<rootDir>/tests/*"
    ],
    "coverageReporters": [
      "text-summary",
      "lcov"
    ]
  },
  "babel": {
    "plugins": [
      "transform-object-rest-spread"
    ],
    "env": {
      "build": {
        "plugins": [
          "external-helpers"
        ],
        "presets": [
          [
            "babel-preset-env",
            {
              "modules": false,
              "targets": {
                "node": "6"
              }
            }
          ]
        ]
      },
      "test": {
        "presets": [
          [
            "babel-preset-env",
            {
              "targets": {
                "node": "6"
              }
            }
          ]
        ]
      }
    }
  },
  "dependencies": {
    "sqlstring": "^2.3.1"
  }
}
