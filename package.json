  },
  "jest": {},
  "babel": {
    "env": {
      "build": {
        "presets": [
          [
            "babel-preset-env",
            {
              "modules": false,
              "targets": {
                "node": "6"
              }
            }
          ]
        ]
      },
      "test": {
        "presets": [
          [
            "babel-preset-env",
            {
              "targets": {
                "node": "6"
              }
            }
          ]
        ]
      }
    }
